#include "tut.nsh"

#define ADD 0
#define LD 1
#define ST 2
#define JMP 3
#define JZ 4

module tut {
  reg count[32] = 0, pc[8], op[3], im[5], acc[8]=0;
  proc_name ift(pc), ift_wait(), exe(im);

  accumulator = acc;

  any{
    count < 10000000: count++;
    count == 10000000: {count++; ift(0);}
    // count <= 20: count++;
    // count == 10: ift(0);
  }

  proc ift{
    // imm(mread(pc++));
    PC = 8'b0001;
    imem_read();
    ift_wait();
  }

  proc ift_wait{
    PC = 8'b0010;
    if(done_imem_read){
      exe();
      op := instruction[7:5];
      im := instruction[4:0];
      pc++;
    }
  }

  proc exe{
    wire nextpc[8];
    any{
      op == ADD: {acc:=acc+8'(im);}
      op == LD:  {acc:=dmem_read(8'(im));}
      op == ST: {dmem_write(8'(im), acc);}
    }

    any{
      op == JMP: {nextpc=8'(im);}
      (op == JZ) && (acc == 0): {nextpc=8'(im);}
      else: nextpc=pc;
    }
    ift(nextpc);
  }
}
